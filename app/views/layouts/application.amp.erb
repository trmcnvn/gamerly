<!doctype html>
<html âš¡>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Daily Gaming News - Gamerly</title>
    <meta name="description" content="Daily gaming news summarized into a TL;DR format">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="canonical" href="<%= url_for(format: :html, only_path: false) %>">
    <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-web-push" src="https://cdn.ampproject.org/v0/amp-web-push-0.1.js"></script>
    <style amp-custom>
      <%= raw File.read("#{Rails.root}/public/minimal.css") %>
      .article{margin-bottom:20px}
      .subtitle{margin-top:-1.25rem}
      amp-web-push-widget button.subscribe {
        display: inline-flex;
        align-items: center;
        border-radius: 2px;
        border: 0;
        box-sizing: border-box;
        margin: 0;
        padding: 10px 15px;
        cursor: pointer;
        outline: none;
        font-size: 15px;
        font-weight: 400;
        background: #4A90E2;
        color: white;
        box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.5);
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }

      amp-web-push-widget button.subscribe .subscribe-icon {
        margin-right: 10px;
      }

      amp-web-push-widget button.subscribe:active {
        transform: scale(0.99);
      }

      amp-web-push-widget button.unsubscribe {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 45px;
        border: 0;
        margin: 0;
        cursor: pointer;
        outline: none;
        font-size: 15px;
        font-weight: 400;
        background: transparent;
        color: #B1B1B1;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }
    </style>
    <script type="application/ld+json">
      {
        "@content": "http://schema.org",
        "@type": "WebSite",
        "url": "https://gamerly.disvelop.net"
      }
    </script>
  </head>
  <body>
    <amp-web-push
      id="amp-web-push"
      layout="nodisplay"
      helper-iframe-url="https://gamerly.disvelop.net/amp-helper-frame.html?appId=<%= ENV["ONE_SIGNAL_APP_ID"] %>"
      permission-dialog-url="https://gamerly.disvelop.net/amp-permission-dialog.html?appId=<%= ENV["ONE_SIGNAL_APP_ID"] %>"
      service-worker-url="https://gamerly.disvelop.net/OneSignalSDKWorker.js?appId=<%= ENV["ONE_SIGNAL_APP_ID"] %>"
    ></amp-web-push>
    <div class="container is-fluid">
      <%= yield %>

      <!-- A subscription widget -->
      <amp-web-push-widget visibility="unsubscribed" layout="fixed" width="245" height="45">
        <button class="subscribe" on="tap:amp-web-push.subscribe">
          <amp-img
            class="subscribe-icon"
            width="24"
            height="24"
            layout="fixed"
            src="data:image/svg+xml;base64,">
          </amp-img>
          Get notifications on the latest gaming news
        </button>
      </amp-web-push-widget>

      <!-- An unsubscription widget -->
      <amp-web-push-widget visibility="subscribed" layout="fixed" width="230" height="45">
        <button class="unsubscribe" on="tap:amp-web-push.unsubscribe">Unsubscribe from updates</button>
      </amp-web-push-widget>
    </div>
  </body>
</html>
